<?xml version='1.0' encoding='utf-8'?>
<widget id="com.game.teendopaanch" version="0.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>3 2 5 Bridge</name>
    <description>
        A popular card game that is played in Indian homes now available to play with bots, against random strangers or with friends.
    </description>
    <author email="mail@edroot.com" href="http://teendopaanch.in">
        Edroot
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="landscape" />
    <preference name="SplashScreenDelay" value="10000" />
    <icon src="res/icon.png" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/hdpi.png" density="land-hdpi"/>
        <splash src="res/ldpi.png" density="land-ldpi"/>
        <splash src="res/mdpi.png" density="land-mdpi"/>
        <splash src="res/xhdpi.png" density="land-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>